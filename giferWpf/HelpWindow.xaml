        <Label Content="Print" HorizontalAlignment="Left" Margin="203,185,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="24" Width="96"/>
        <CheckBox x:Name="checkBox1" Content="Show Help at startup" HorizontalAlignment="Left" Margin="11,243,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <Button Content="Save and Continue" HorizontalAlignment="Left" Margin="12,266,0,0" VerticalAlignment="Top" Width="405" Grid.ColumnSpan="2" Height="30" Click="Button_Click"/>

    </Grid>
</Window>
