        <Label Content="Exit" HorizontalAlignment="Left" Margin="203,209,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="24" Width="115"/>
        <Label Content="Prevous, Next gif/image" HorizontalAlignment="Left" Margin="203,137,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="24" Width="176"/>
