        <Label Content="[Delete]" HorizontalAlignment="Left" Margin="13,161,0,0" VerticalAlignment="Top" Height="24" Width="68"/>
        <Label Content="[Alt]    + Any above" HorizontalAlignment="Left" Margin="13,113,0,0" VerticalAlignment="Top" Height="24" Width="154"/>
        <Label Content="Mouse🖱 Wheel up/down ±" HorizontalAlignment="Left" Margin="16,41,0,0" VerticalAlignment="Top" Height="24" Width="180"/>
        <Label Content="[Ctrl]   + P" HorizontalAlignment="Left" Margin="13,185,0,0" VerticalAlignment="Top" Height="24" Width="96"/>
        <Label Content="by 1.05" HorizontalAlignment="Left" Margin="204,89,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="24" Width="60"/>
