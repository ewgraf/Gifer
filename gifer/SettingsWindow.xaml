<Window x:Class="gifer.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gifer"
        mc:Ignorable="d"
        Title="Settings" Height="300" Width="483.686" WindowStartupLocation="CenterScreen">
    <Grid>
        <ComboBox HorizontalAlignment="Left" Margin="185,10,0,0" VerticalAlignment="Top" Width="281" SelectedIndex="2">
            <ComboBoxItem Content="Settings_RenderingModeLinear"/>
            <ComboBoxItem Content="Settings_RenderingModeFant"/>
            <ComboBoxItem Content="Settings_RenderingModeNearestNeighbor"/>
        </ComboBox>
        <Label x:Name="Settings_RenderingModeLabel" Content="Settings_RenderingModeLabel" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <ComboBox HorizontalAlignment="Left" Margin="406,43,0,0" VerticalAlignment="Top" Width="60" SelectedIndex="0">
            <ComboBoxItem Content="EN"/>
            <ComboBoxItem Content="RU"/>
        </ComboBox>
        <Label x:Name="Settings_LanguageLabel" Content="Settings_LanguageLabel" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
