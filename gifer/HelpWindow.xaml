            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <GroupBox Header="Shortcuts" HorizontalAlignment="Left" Height="210" VerticalAlignment="Top" Width="436" Margin="10,26,0,0" Grid.ColumnSpan="2"/>
        <Label Content="Это окно помощи можно вызывать, нажав 'H'" HorizontalAlignment="Left" Margin="10,1,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="24" Width="351"/>
